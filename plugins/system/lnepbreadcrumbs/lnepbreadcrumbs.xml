	<config>
		<fields name="params">
			<fieldset name="basic" addfieldprefix="SYW\Library\Field">				
				<field type="extensionversion" extension="plg_system_lnepbreadcrumbs" />
				<field type="extensionauthor" />
				<field type="extensionconnect" />
				<field type="extensiontranslators" translators="PLG_SYSTEM_LNEPBREADCRUMBS_TRANSLATORS" />
				
				<field type="extensionlinks" 
					translate="https://simplifyyourweb.com/translators" 
					onlinedoc="https://simplifyyourweb.com/documentation/latest-news/plugin-breadcrumbs" />
				
