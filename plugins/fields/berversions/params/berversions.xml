<form>
  <fields name="params">
    <fieldset name="berversions_params" label="Bears Versions Parameters">
      <field name="berversions" type="subform"
             label="Bears Versions"
             description="Add your data here"
             multiple="true"
             layout="joomla.form.field.subform.repeatable-table">
        <form>
          <field
            name="url"
            type="url"
            label="PLG_FIELDS_BERVERSIONS_URL"
            description="PLG_FIELDS_BERVERSIONS_URL_DESC"
            default="" size="60"
          />

          <field
            name="icon"
            type="checkboxes"
            default=""
            description="PLG_FIELDS_BERVERSIONS_STATE_DESC"
            label="PLG_FIELDS_BERVERSIONS_STATE">
              <option value="Full">Full Star</option>
              <option value="Beta">Half Star</option>
              <option value="Archive">Archive</option>
              <option value="Security">Shield</option>
          </field>
        </form>
      </field>
    </fieldset>
  </fields>
</form>
