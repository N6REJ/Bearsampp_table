<form>
  <fields name="params">
    <fieldset name="berversions_params" label="Bears Versions Parameters">
      <field name="berversions" type="subform"
             label="BERVERSIONS_SUBFORM"
             description="BERVERSIONS_SUBFORM_DESC"
             multiple="true"
             layout="joomla.form.field.subform.repeatable-table">
        <form>
          <field
            name="url"
            type="url"
            label="BERVERSIONS_URL"
            description="BERVERSIONS_URL_DESC"
            default="" size="60"
          />

          <field
            name="icon"
            type="checkboxes"
            default=""
            description="BERVERSIONS_STATE_DESC"
            label="BERVERSIONS_STATE">
              <option value="Full">Full Star</option>
              <option value="Beta">Half Star</option>
              <option value="Archive">Archive</option>
              <option value="Security">Shield</option>
          </field>
        </form>
      </field>
    </fieldset>
  </fields>
</form>
