	<version>6.3.0</version>
	<description>PLG_INSTALLER_ADPINSTALLER_XML_DESCRIPTION</description>
	
	<scriptfile>installer.php</scriptfile>

	<media folder="media" destination="plg_installer_adpinstaller">
