		<language tag="da-DK">language/da-DK/da-DK.plg_installer_adpinstaller.sys.ini</language>
		<language tag="de-DE">language/de-DE/de-DE.plg_installer_adpinstaller.ini</language>
		<language tag="de-DE">language/de-DE/de-DE.plg_installer_adpinstaller.sys.ini</language>
		<language tag="en-GB">language/en-GB/en-GB.plg_installer_adpinstaller.ini</language>
		<language tag="en-GB">language/en-GB/en-GB.plg_installer_adpinstaller.sys.ini</language>
		<language tag="fr-FR">language/fr-FR/fr-FR.plg_installer_adpinstaller.ini</language>
		<language tag="fr-FR">language/fr-FR/fr-FR.plg_installer_adpinstaller.sys.ini</language>
		<language tag="it-IT">language/it-IT/it-IT.plg_installer_adpinstaller.ini</language>
