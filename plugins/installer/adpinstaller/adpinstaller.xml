		<language tag="ru-RU">language/ru-RU/ru-RU.plg_installer_adpinstaller.ini</language>
		<language tag="ru-RU">language/ru-RU/ru-RU.plg_installer_adpinstaller.sys.ini</language>
		<language tag="sl-SI">language/sl-SI/sl-SI.plg_installer_adpinstaller.ini</language>
		<language tag="sl-SI">language/sl-SI/sl-SI.plg_installer_adpinstaller.sys.ini</language>
		<language tag="tr-TR">language/tr-TR/tr-TR.plg_installer_adpinstaller.ini</language>
		<language tag="tr-TR">language/tr-TR/tr-TR.plg_installer_adpinstaller.sys.ini</language>
	</languages>
	
	<config>
		<fields name="params">
			<fieldset name="basic" addfieldprefix="SYW\Library\Field">
			
				<field type="extensionversion" extension="plg_installer_adpinstaller" />
				<field type="extensionauthor" />
				<field type="extensionconnect" />
				
				<field type="message" text="PLG_INSTALLER_ADPINSTALLER_MESSAGE_USEUPDATESERVERINSTEAD" style="warning" />

				<field name="download_id" type="text" filter="string" size="30" default="" class="input-xxlarge" 
					label="PLG_INSTALLER_ADPINSTALLER_FIELD_DOWNLOADID_LABEL" 
					description="PLG_INSTALLER_ADPINSTALLER_FIELD_DOWNLOADID_DESC" />
			</fieldset>
		</fields>
	</config>
</extension>
